<%- include("partials/header.ejs") %>
<title>Zland03</title>
<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>
<div class="dropdown">
  <div id="dropdownContent" class="dropdown-content">
    <form action="/proceed" method="post">
      <label for="username">Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter your name"
        required
      />

      <label for="password">Surname</label>
      <input
        type="text"
        id="surname"
        name="surname"
        placeholder="Enter your surname"
        required
      />

      <button type="submit">Proceed</button>
    </form>
  </div>
</div>
<div class="container my-5">
  <div
    class="position-relative p-5 text-center text-muted bg-body border border-dashed rounded-5"
  >
    <h1 class="text-body-emphasis">Welcome to Zland03</h1>
    <p class="col-lg-6 mx-auto mb-4">
      This is my personal Portfolio ver-03. <br />
      Hopefully I can depict bits of my intuition and skills regarding the
      programming world. <br />
      To continue, please select either guest or proceed with authentication.-->
    </p>
    <button class="btn btn-primary px-5 mb-5" type="button" id="namein">
      Enter credentials
    </button>
    <a href="/home">
      <button class="btn btn-primary px-5 mb-5" type="button" id="guest">
        Continue as guest
      </button></a
    >
  </div>
</div>
<script>
  document.getElementById("namein").addEventListener("click", function () {
    var dropdownContent = document.getElementById("dropdownContent");
    dropdownContent.classList.toggle("show");
  });

  // Close the dropdown if the user clicks outside of it
  window.onclick = function (event) {
    if (!event.target.matches(".dropbtn")) {
      var dropdownContent = document.getElementById("namein");
      if (dropdownContent.classList.contains("show")) {
        dropdownContent.classList.remove("show");
      }
    }
  };
</script>
